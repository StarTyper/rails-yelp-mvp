<div class="d-flex justify-content-center">
  <div class="">
    <div class="m-3">
      <h1>Restaurants</h1>
    </div>

    <div id="restaurants">
      <% @restaurants.each do |restaurant| %>
      <div class="card m-3 p-3">

        <div class="">
          <h3><%= restaurant.name %></h3>
        </div>


        <div>
            <p>Adress: <%= restaurant.address %></p>
            <p>Phone: <%= restaurant.phone_number %></p>
            <p>Category: <%= restaurant.category %></p>
        </div>

        <div class="">
          <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
        </div>
      </div>
      <% end %>
    </div>

    <div id="links">
      <div class="m-3">
        <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
