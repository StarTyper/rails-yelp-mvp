<div class="d-flex justify-content-center m-3">
  <div class="card p-3">
    <div class="">
      <h3><%= @restaurant.name %></h3>
    </div>
    <div class="mt-3">
        <p>Adress: <%= @restaurant.address %></p>
        <p>Phone: <%= @restaurant.phone_number %></p>
        <p>Category: <%= @restaurant.category %></p>
    </div>
  </div>
  <div id="links">
    <%= link_to "All restaurants", restaurants_path, class: "btn btn-primary" %>
  </div>
  <div class="">
    <h2>Reviews for <%= @restaurant.name %></h2>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li>
          <%= review.content %>
          <%= review.rating %>
          <%# <%= link_to "Delete", review_path(review), data: { turbo_method: :delete } %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
